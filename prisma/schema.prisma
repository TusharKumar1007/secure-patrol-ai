generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      String   @default("GUARD") // 'GUARD' or 'SUPERVISOR'
  createdAt DateTime @default(now())
  logs      PatrolLog[]
}

model Checkpoint {
  id          String   @id @default(uuid())
  name        String
  description String?
  latitude    Float?   
  longitude   Float?   
  instruction String?  @default("Verify identity and check for unauthorized objects.")
  videoUrl    String?  @default("https://www.youtube.com/embed/ScMzIvxBSi4") 
  logs        PatrolLog[]
}

model PatrolLog {
  id            String   @id @default(uuid())
  checkInTime   DateTime @default(now())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  checkpointId  String
  checkpoint    Checkpoint @relation(fields: [checkpointId], references: [id])
  gpsLatitude   Float?   
  gpsLongitude  Float? 
  status        String   @default("VERIFIED")
  @@index([userId])
  @@index([checkpointId])
  @@index([checkInTime])
}